#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    default_album_art_path: None,
    show_song_table_header: false,
    draw_borders: true,
    browser_column_widths: [20, 38, 42],
    text_color: "#c6c3c2",
    tab_bar: (
        enabled: true,
        active_style: (fg: "#b7a586", modifiers: "Bold"),
        inactive_style: (fg: "#ab5032", modifiers: ""),
    ),
    highlighted_item_style: (fg: "#ab5032", modifiers: "Bold"),
    current_item_style: (fg: "#b7a586", bg: "#ab5032", modifiers: "Bold"),
    borders_style: (fg: "#ab5032", modifiers: "Bold"),
    highlight_border_style: (fg: "#ab5032"),
    symbols: (song: "󰝚 ", dir: " ", marker: "* ", ellipsis: "..."),
    progress_bar: (
        symbols: ["█", "█", "█"],
        track_style: (fg: "#1b0f0b"),
        elapsed_style: (fg: "#ab5032"),
        thumb_style: (fg: "#ab5032"),
    ),
    scrollbar: (
        symbols: ["", "", "", ""],
        track_style: (fg: "#ab5032"),
        ends_style: (fg: "#ab5032"),
        thumb_style: (fg: "#ab5032"),
    ),
    song_table_format: [
        (
            prop: (kind: Property(Title), style: (fg: "#749fa0"),
                highlighted_item_style: (fg: "#1b0f0b", modifiers: "Bold"),
                default: (kind: Property(Filename), style: (fg: "gray"),)
            ),
            width: "70%",
        ),
        (
            prop: (kind: Property(Album), style: (fg: "#ab5032"),
                default: (kind: Text("Unknown Album"), style: (fg: "#749fa0"))
            ),
            width: "30%",
        ),
    ],
    layout: Split(
        direction: Vertical,
        panes: [
            (
                size: "3",
                pane: Pane(Tabs),
            ),
            (
                size: "4",
                pane: Split(
                    direction: Horizontal,
                    panes: [
                        (
                            size: "100%",
                            pane: Split(
                                direction: Vertical,
                                panes: [
                                    (
                                        size: "4",
                                        borders: "ALL",
                                        pane: Pane(Header),
                                    ),
                                ]
                            )
                        ),
                    ]
                ),
            ),
            (
                size: "100%",
                pane: Split(
                    direction: Horizontal,
                    panes: [
                        (
                            size: "100%",
                            borders: "NONE",
                            pane: Pane(TabContent),
                        ),
                    ]
                ),
            ),
            (
                size: "3",
                borders: "TOP | BOTTOM",
                pane: Pane(ProgressBar),
            ),
        ],
    ),
    header: (
        rows: [
            (
                left: [
                    (kind: Property(Status(StateV2(playing_label: " ", paused_label: "❚❚", stopped_label: "❚❚"))), style: (fg: "#b7a586", modifiers: "Bold")),
                ],
                center: [
                    (kind: Property(Song(Title)), style: (fg: "#c6c3c2",modifiers: "Bold"),
                        default: (kind: Property(Song(Filename)), style: (fg: "#c6c3c2",modifiers: "Bold"))
                    )
                ],
                right: [
                    (kind: Text("Vol: "), style: (fg: "#b7a586", modifiers: "Bold")),
                    (kind: Property(Status(Volume)), style: (fg: "#b7a586", modifiers: "Bold")),
                    (kind: Text("% "), style: (fg: "#b7a586", modifiers: "Bold"))
                ]
            ),
            (
                left: [
                    (kind: Property(Status(Elapsed)),style: (fg: "#c6c3c2")),
                    (kind: Text("/"),style: (fg: "#1b0f0b")),
                    (kind: Property(Status(Duration)),style: (fg: "#c6c3c2")),
                ],
                center: [
                    (kind: Property(Song(Artist)), style: (fg: "#b7a586", modifiers: "Bold"),
                        default: (kind: Text("Unknown Artist"), style: (fg: "#ab5032", modifiers: "Bold"))
                    ),
                ],
                right: [
                    (
                        kind: Property(Widget(States(
                            active_style: (fg: "#c6c3c2", modifiers: "Bold"),
                            separator_style: (fg: "#c6c3c2")))
                        ),
                        style: (fg: "#ab5032")
                    ),
                ]
            ),
        ],
    ),
    browser_song_format: [
        (
            kind: Group([
                (kind: Property(Track)),
                (kind: Text(" ")),
            ])
        ),
        (
            kind: Group([
                (kind: Property(Artist)),
                (kind: Text(" - ")),
                (kind: Property(Title)),
            ]),
            default: (kind: Property(Filename))
        ),
    ],
)

